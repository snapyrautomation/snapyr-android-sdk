<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.snapyr.sdk.sample.MainActivity">

        <Button
            android:id="@+id/action_track_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_a" />

        <Button
            android:id="@+id/action_track_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_b" />

        <Button
            android:id="@+id/action_show_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_notification" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/identify_user_id"
            android:inputType="text" />

        <Button
            android:id="@+id/action_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/identify_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/action_flush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flush" />

        <Button
            android:id="@+id/action_reset_pushtoken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_token" />

        <TextView
            android:id="@+id/event_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="8dp"
            android:textSize="16dp"
            android:bufferType="editable" />

    </LinearLayout>

</ScrollView>
